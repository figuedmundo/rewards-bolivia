# build stage
FROM node:20-alpine AS build

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

# production stage
FROM node:20-alpine

WORKDIR /usr/src/app

COPY --from=build /usr/src/app/package*.json ./

RUN npm install --production

COPY --from=build /usr/src/app/dist ./dist

EXPOSE 3000

CMD [ "node", "dist/main" ]
